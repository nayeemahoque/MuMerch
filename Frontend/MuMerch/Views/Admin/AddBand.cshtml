
@{
    ViewBag.Title = "AddBand";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<br />
<br />
<br />
<br />
<h2>Add Band</h2>

@{
    bool checkIsActive(string prof)
    {
        if (Model != null && Model.IsActive != null)
        {
            if (prof.Equals(Model.IsActive)) return true;
        }
        return false;
    }
}


<form method="post">
    <table class="table table-hover">
        <tr>
            <td>Name:</td>
            <td>
                <input type="text" name="Name" value="@(Model == null ? "":Model.Name)" />
                <span class="text-danger">@Html.ValidationMessage("Name")</span>
            </td>
        </tr>

        <tr>
            <td>OnboardDate :</td>
            <td>
                <input type="date" name="OnboardDate" value="@(Model==null?" ":Model.OnboardDate.Date.ToString("yyyy-MM-dd"))" />
            </td>
        </tr>

        <tr>
            <td>IsActive :</td>
            <td>
                <input type="radio" checked=@(checkIsActive("true")) name="IsActive" value="true" />Yes
                <input type="radio" checked=@(checkIsActive("false")) name="IsActive" value="false" />No
                <span class="text-danger">@Html.ValidationMessage("IsActive")</span>
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-success" value="Add" />
            </td>
        </tr>

    </table>

</form>
