
@{
    ViewBag.Title = "EditDesignation";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Edit Designation</h2>

@{
    bool checkIsActive(string isActive)
    {
        if (Model != null && Model.IsActive != null)
        {
            if (isActive.Equals(Model.IsActive)) return true;
        }
        return false;
    }
}

<form method="post">
    <table class="table table-hover">
        <tr>
            <td>Name:</td>
            <td>
                <input type="text" name="Name" value="@(Model == null ? "":Model.Name)" />
                <span class="text-danger">@Html.ValidationMessage("Name")</span>
            </td>
        </tr>
        <tr>
            <td>IsActive:</td>
            <td>
                <select class="form-control" name="IsActive">
                    <option selected disabled>Select</option>
                    <option selected="@(checkIsActive("True"))" value="True">True</option>
                    <option selected="@(checkIsActive("False"))" value="False">False</option>
                </select>
                <span class="text-danger">@Html.ValidationMessage("IsActive")</span>
            </td>
        </tr>
        <tr>
            <td>
                <input type="Submit" class="btn btn-success" value="Edit" />
            </td>
        </tr>
    </table>

</form>