
@{
    ViewBag.Title = "DeleteGig";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<br /><br />
<h2>Delete Gig</h2>


@{
    bool checkIsActive(string isActive)
    {
        if (Model != null && Model.IsActive != null)
        {
            if (isActive.Equals(Model.IsActive)) return true;
        }
        return false;
    }
}


<form method="post">
    <table class="table table-hover">
        <tr>
            <td>Name:</td>
            <td>
                <input type="text" name="Name" value="@(Model == null ? "":Model.Name)" />
                <span class="text-danger">@Html.ValidationMessage("Name")</span>
            </td>
        </tr>
        <tr>
            <td>Start Date:</td>
            <td>
                <input type="date" name="StartDate" value="@(Model==null?" ":Model.StartDate.Date.ToString("yyyy-MM-dd"))" />
            </td>
        </tr>
        <tr>
            <td>End Date:</td>
            <td>
                <input type="date" name="EndDate" value="@(Model==null?" ":Model.EndDate.Date.ToString("yyyy-MM-dd"))" />
            </td>
        </tr>
        <tr>
            <td>IsActive:</td>
            <td>
                <select class="form-control" name="IsActive">
                    <option selected disabled>Select</option>
                    <option selected="@(checkIsActive("true"))" value="true">Yes</option>
                    <option selected="@(checkIsActive("false"))" value="false">No</option>
                </select>
                <span class="text-danger">@Html.ValidationMessage("IsActive")</span>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" class="btn btn-success" value="Delete" />
            </td>
        </tr>
    </table>

</form>