
@{
    ViewBag.Title = "EditGrade";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>EditGrade</h2>

@{
    bool checkIsActive(string active)
    {
        if (Model != null && Model.IsActive != null)
        {
            if (active.Equals(Model.IsActive)) return true;
        }
        return false;
    }
}

<form method="post">
    <table class="table table-hover">
        <tr>
            <td>Name:</td>
            <td>
                <input type="text" name="Name" value="@(Model == null ? "":Model.Name)" />
                <span class="text-danger">@Html.ValidationMessage("Name")</span>
            </td>
        </tr>
        <tr>
            <td>Is Active:</td>
            <td>
                <input type="radio" checked=@(checkIsActive("True")) name="IsActive" value="True" />Yas
                <input type="radio" checked=@(checkIsActive("False")) name="IsActive" value="False" />No
                <span class="text-danger">@Html.ValidationMessage("IsActive")</span>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-success" value="Edit" />
            </td>
        </tr>
    </table>

</form>
