
@{
    ViewBag.Title = "EditGigManager";
    Layout = "~/Views/Shared/_Employee.cshtml";
}

<h2>EditGigManager</h2>


@{
    bool checkGigManagerId(string gigManagerId)
    {
        if (Model != null && Model.GigManagerId != null)
        {
            if (gigManagerId.Equals(Model.GigManagerId)) return true;
        }
        return false;
    }
}
@{
    bool checkGigId(string gigId)
    {
        if (Model != null && Model.GigId != null)
        {
            if (gigId.Equals(Model.GigId)) return true;
        }
        return false;
    }
}
@{
    bool checkUserId(string userId)
    {
        if (Model != null && Model.UserId != null)
        {
            if (userId.Equals(Model.UserId)) return true;
        }
        return false;
    }
}
<form method="post">
    <table class="table table-hover">
        <tr>
            <td>GigManager Id:</td>
            <td>
                <select class="form-control" name="GigManagerId">
                    <option selected disabled>Select</option>
                    @foreach (var item in @ViewBag.GigManager)
                    {
                        <option selected="@(checkGigManagerId("@item.Id"))" value="{@item.Id}">@item.Name</option>
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessage("GigManager Id")</span>
            </td>
        </tr>
        <tr>
            <td>Gig Id:</td>
            <td>
                <select class="form-control" name="GigId">
                    <option selected disabled>Select</option>
                    @foreach (var item in @ViewBag.Gig)
                    {
                        <option selected="@(checkGigId("@item.Id"))" value="{@item.Id}">@item.Name</option>
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessage("Gig Id")</span>
            </td>
        </tr>
        <tr>
            <td>User Id:</td>
            <td>
                <select class="form-control" name="UserId">
                    <option selected disabled>Select</option>
                    @foreach (var item in @ViewBag.User)
                    {
                        <option selected="@(checkUserId("@item.Id"))" value="{@item.Id}">@item.Name</option>
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessage("User Id")</span>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-success" value="Edit" />
            </td>
        </tr>
    </table>

</form>