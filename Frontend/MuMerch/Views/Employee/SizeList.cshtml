@model IEnumerable<MuMerch.Models.Size>

@{
    ViewBag.Title = "SizeList";
    Layout = "~/Views/Shared/_Employee.cshtml";
}

<h2>SizeList</h2>

<p>
    @Html.ActionLink("Create New", "AddSize")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Measurement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Measurement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSize", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteSize", new { id=item.Id })
        </td>
    </tr>
}

</table>
